<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/contactitem_catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4.0dip" />

    <LinearLayout
        android:id="@+id/contactitem_layout"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_below="@id/contactitem_catalog"
        android:orientation="horizontal"
        android:paddingLeft="8.0dip" >

        <CheckBox
            android:id="@+id/contactitem_select_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21.0dip"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/contactitem_touxiang"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>